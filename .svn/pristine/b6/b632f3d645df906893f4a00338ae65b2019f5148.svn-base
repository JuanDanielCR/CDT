<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<jsp:text>
	<![CDATA[
		<script	src="${pageContext.request.contextPath}/pages/admision/pagar-admision/js/index.js" type="text/javascript"></script>
		<script type="text/javascript" src="${pageContext.request.contextPath}/pages/admision/gestionar-pasos-proceso/js/index-pasos-proceso.js"></script>
		]]>
</jsp:text>
</head>
<body>
	<s:url var="varUrl" action="pagar-admision-tarjeta/new"
		includeContext="true" />
	<s:hidden id="urlTarjeta1" value="%{#varUrl}" />
	<s:url var="varUrl1" action="pagar-admision-spei/new"
		includeContext="true" />
	<s:hidden id="urlTarjeta2" value="%{#varUrl1}" />
	<s:url var="varUrl2" action="pagar-admision-oxxo/new"
		includeContext="true" />
	<s:hidden id="urlTarjeta3" value="%{#varUrl2}" />

	<div class="row">
		<div class="col-md-12">
			<h1>
				<s:text name="IU1.5-1_TITLE" />
			</h1>
		</div>
	</div>

	<!-- ############################ BARRA DE PASOS DEL PROCESO #################################### -->
	<s:set var="varPasoProceso" value="1" />
	<s:hidden id="idPasoProceso" value="%{#varPasoProceso}" />
	<s:set var="varEtapaProceso" value="1" />
	<s:hidden id="idEtapaProceso" value="%{#varEtapaProceso}" />
	<div class="col-md-8 col-md-offset-2">
		<s:include value="../gestionar-pasos-proceso/index-pasos-proceso.jsp" />
	</div>

	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<s:form id="frmRealizarPago"
				action="%{#pagecontext.request.contextPath}/admision/pagar-admision"
				theme="simple" method="post">

				<!-- Pago con Tarjeta -->

				<!-- <div class="form-group"> -->
				<fieldset class="form-section form-horizontal">
					<legend class="form-section">
						<s:text name="IU1.5-1_LBL1" />
					</legend>

					<div class="col-sm-4 col-md-4">
						<input type="radio" name="opcionPago" value="%{urlTarjeta1}"
							id="pago1"><label for="americane"> <img
							class="imagen-tarjetas"
							src="${pageContext.request.contextPath}/resources/images/icons/americane.png">
						</img>
						</label> </input>
					</div>

					<div class="col-sm-4 col-md-4">
						<input type="radio" name="opcionPago" value="visa" id="pago2"><label
							for="visa"> <img class="imagen-tarjetas"
							src="${pageContext.request.contextPath}/resources/images/icons/visa.png">
						</img>
						</label> </input>
					</div>

					<div class="col-sm-4 col-md-4">
						<input type="radio" name="opcionPago" value="mastercard"
							id="pago3"><label for="mastercard"> <img
							class="imagen-tarjetas"
							src="${pageContext.request.contextPath}/resources/images/icons/mastercard.png">
						</img>
						</label> </input>
					</div>
				</fieldset>

				<!-- Pago vÃ­a SPEI -->

				<fieldset class="form-section form-horizontal">
					<legend class="form-section">
						<s:text name="IU1.5-1_LBL2" />
					</legend>

					<input type="radio" name="opcionPago" value="spei" id="pago4"><label
						for="spei"> <img class="imagen-tarjetas"
						src="${pageContext.request.contextPath}/resources/images/icons/spei.png">
					</img>
					</label> </input>

				</fieldset>

				<!-- Pago en efectivo -->

				<fieldset class="form-section form-horizontal">
					<legend class="form-section">
						<s:text name="IU1.5-1_LBL3" />
					</legend>

					<input type="radio" name="opcionPago" value="oxxo" id="pago5"><label
						for="spei"> <img class="imagen-tarjetas"
						src="${pageContext.request.contextPath}/resources/images/icons/oxxo.png">
					</img>
					</label> </input>

				</fieldset>

				<div class="row">
					<div class="row buttons col-md-12 text-right">
						<a id="btnAceptar" class="btn btn-default btn-default-eld" href="">
							<s:text name="btnAceptar" />
						</a>
					</div>
				</div>

			</s:form>
		</div>
	</div>
</body>
	</html>
</jsp:root>