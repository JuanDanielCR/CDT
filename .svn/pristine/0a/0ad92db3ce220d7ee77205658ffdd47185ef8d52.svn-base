<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<html xmlns="http://www.w3.org/1999/xhtml">
<!-- Head -->
<head>
<jsp:text>
	<![CDATA[
	<script
		src="${pageContext.request.contextPath}/pages/convocatoria/gestionar-periodo-criterio/js/index.js"
		type="text/javascript"></script>
	]]>
</jsp:text>
</head>
<!-- Body -->
<body>
	<!-- Titulo -->
	<div class="row title">
		<div class="col-md-12">
			<h1 class="title">
				<s:text name="IU_TLT4" />
			</h1>
		</div>
	</div>

	<!-- label mensajes obligatorios -->
	<div class="row">
		<div class="outter-section form-medium text-left">
			<div class="col-md-12 text-left">
				<s:text name="IU1.2-3_LBL1" />
			</div>
		</div>
	</div>

	<!-- Formulario de registro -->
	<s:form id="frmRegistrarCriterio"
		action="%{#pageContext.request.contextPath}/convocatoria/gestionar-periodo-criterio/%{model.id}"
		method="post" theme="simple">
		
		<s:hidden name="_method" value="put"></s:hidden>
		<fieldset
			class="form-section form-horizontal form-medium text-justify">
			<legend class="form-section">
				<s:text name="IU_LBL14"></s:text>
			</legend>

			<s:hidden name="_method" value="put" />
			<!-- Nombre del periodo -->
			<div class="form-group text-center">
				<label class="col-md-4 control-label label-obligatorio" for=""><s:text
						name="IU_LBL15" /></label>
				<div class="col-md-8">
					<s:textfield id="txNombre" name="model.nombrePeriodo" type="text"
						cssClass="form-control" maxlength="60" cssErrorClass="field-error" />
					<s:fielderror fieldName="model.nombrePeriodo" cssClass="error"
						theme="bootstrap" />
				</div>
			</div>

			<!-- Fecha inicio-->
			<div class="form-group text-left">
				<label class="col-md-4 control-label label-obligatorio" for=""><s:text
						name="IU_LBL8" /></label>
				<div class="col-md-8 input-min">
					<sj:datepicker id="dpInicio" name="fecha.fechaInicio"
						cssClass="form-control date-picker" showOn="focus"
						inputAppendIcon="calendar" changeYear="true" changeMonth="true"
						readonly="true" showAnim="fadeIn" />
					<s:fielderror fieldName="fecha.fechaInicio" cssClass="error"
						theme="bootstrap" />
				</div>
			</div>

			<!-- Fecha termino-->
			<div class="form-group text-left">
				<label class="col-md-4 control-label label-obligatorio" for=""><s:text
						name="IU_LBL9" /></label>
				<div class="col-md-8 input-min">
					<sj:datepicker id="dpTermino" name="fecha.fechaFin"
						cssClass="form-control date-picker" showOn="focus"
						inputAppendIcon="calendar" changeYear="true" changeMonth="true"
						readonly="true" showAnim="fadeIn" />
					<s:fielderror fieldName="fecha.fechaFin" cssClass="error"
						theme="bootstrap" />
				</div>
			</div>

			<!-- Horario inicio-->
			<div class="form-group">
				<label class="col-md-4 control-label label-obligatorio" for="">
					<s:text name="IU_LBL10" />
				</label>
				<div class="col-md-8 input-min">
					<div class="input-group col-md-8 input-min clockpicker">
						<div class="input-group-addon">
							<span class="glyphicon glyphicon-time"></span>
						</div>
						<s:textfield id="hora" name="fecha.horaInicio"
							cssClass="form-control" maxlenght="20" />
					</div>
					<div class="col-md-8">
						<s:fielderror fieldName="fecha.horaInicio" cssClass="error"
							theme="bootstrap" />
					</div>
				</div>
			</div>

			<!-- Horario final-->
			<div class="form-group">
				<label class="col-md-4 control-label label-obligatorio" for="">
					<s:text name="IU_LBL11" />
				</label>
				<div class="col-md-8 input-min">
					<div class="input-group col-md-8 input-min clockpicker">
						<div class="input-group-addon">
							<span class="glyphicon glyphicon-time"></span>
						</div>
						<s:textfield id="hora" name="fecha.horaFin"
							cssClass="form-control" maxlenght="20" />
					</div>
					<div class="col-md-8">
						<s:fielderror fieldName="fecha.horaFin" cssClass="error"
							theme="bootstrap" />
					</div>
				</div>
			</div>

			<s:set var="listOpciones" value="{{'Si',true},{'No',false}}" />
			<!-- Control radio tiene periodo -->
			<div class="form-group">
				<label class="col-md-4 control-label label-obligatorio" for=""><s:text
						name="IU_LBL13" /></label>
				<div class="col-md-8">
					<div class="col-md-8 col-xs-12 pull-left">
						<s:set var="varChecked" value="" />
						<s:iterator value="listOpciones" var="g">
							<s:set var="valor" value="#g[0]" />
							<div class="col-md-4 col-xs-6 radio-container"
								name="model.publicacion">
								<s:if test="%{#g[1] eq model.publicacion}">
									<input id="mexicoSecundaria_${g[1]}" name="model.publicacion"
										type="radio" value="${g[1]}" checked="checked" /> ${g[0]}
									</s:if>
								<s:else>
									<input id="mexicoSecundaria_${g[1]}" name="model.publicacion"
										type="radio" value="${g[1]}" /> ${g[0]}
									</s:else>
							</div>
						</s:iterator>
					</div>
				</div>
			</div>
		</fieldset>

		<!-- Botones de aceptar y cancelar -->
		<div class="row">
			<div class="outter-section form-medium">
				<div class="text-right col-md-12">
					<s:submit id="btnAceptar"
						cssClass="btn btn-default btn-default-eld"
						value="%{getText('mx.com.eld.boton.aceptar')}" />
					<a class="btn btn-default btn-default-eld"
						href="${pageContext.request.contextPath}/convocatoria/gestionar-periodo-criterio">
						<s:text name="mx.com.eld.boton.cancelar" />
					</a>
				</div>
			</div>
		</div>
	</s:form>

</body>
	</html>
</jsp:root>