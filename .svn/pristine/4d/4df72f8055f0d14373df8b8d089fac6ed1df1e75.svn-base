<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<jsp:text>
		<![CDATA[                 
	<script type="text/javascript" src="${pageContext.request.contextPath}/pages/calendario/gestionar-actividad/js/index.js"></script>
	]]>
	</jsp:text>


	<s:set var="listaActividades"
		value="{
		{'Curso propedéutico','Académica','10/01/2015','13/01/2015'},
		{'Curso académico','Académica','10/01/2015','13/01/2016'},
		{'Suspensión de labores','Académica','12/03/2016','14/03/2016'},
		{'Exámenes preordinarios','Académica','15/03/2016','17/03/2016'},
		{'Exámenes ordinarios','Académica','19/03/2016','20/03/2016'},
		{'Inicio de curso propedéutico','Académica','25/03/2016','26/03/2016'},
		{'Recepción de solicitudes','Administrativa','13/04/2016','14/04/2016'}}" />

	<!-- titulo -->
	<div class="row title">
		<div class="col-md-12">
			<h1 class="title">
				<s:text name="IU1.1-8_TITLE" />
			</h1>
		</div>
	</div>

	<div class="row title">
		<div class="col-md-12">
			<h2 class="title">
				<s:text name="IU1.1-8_LBL2" />
			</h2>
		</div>
	</div>

	<div class="form-group">
		<div class="row">
			<div class="col-md-6 text-left">
				<h3 class="title">
					<s:text name="IU1.1-8_LBL2a" />
				</h3>
			</div>
			<div class="col-md-6 text-right">
				<h3 class="title">
					<s:text name="IU1.1-8_LBL2b" />
				</h3>
			</div>
		</div>
	</div>

	<!-- tabla -->
	<div class="form form-horizontal form-max text-justify">



		<div class="form-group">
			<div class="row">
				<div class="col-md-12">
					<table id="tblActividades" class="table table-striped">
						<thead>
							<tr>
								<th data-priority="1"><s:text name="IU1.1-8_LBL3" /></th>
								<th data-priority="2"><s:text name="IU1.1-8_LBL4" /></th>
								<th data-priority="3"><s:text name="IU1.1-8_LBL5" /></th>
								<th data-priority="4"><s:text name="IU1.1-8_LBL6" /></th>
							</tr>
						</thead>
						<tbody>
							<s:iterator value="listaActividades" var="actividad">
								<tr>
									<td>${actividad[0]}</td>
									<td>${actividad[1]}</td>
									<td>${actividad[2]}</td>
									<td>${actividad[3]}</td>
								</tr>
							</s:iterator>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<!-- Botones de agregar y pdf -->
	<div class="form-group">
		<div class="outter-section">
			<div class="text-right col-md-12">
				<a class="btn btn-default btn-default-eld"
					href="${pageContext.request.contextPath}/calendario/gestionar-actividad">
					<s:text name="IU1.1-8_BTN1" />
				</a> <a class="btn btn-default btn-default-eld"
					href="${pageContext.request.contextPath}/calendario/gestionar-actividad">
					<s:text name="IU1.1-8_BTN2" />
				</a> <a class="btn btn-default btn-default-eld"
					href="${pageContext.request.contextPath}/calendario/gestionar-actividad">
					<s:text name="IU1.1-8_BTN3" />
				</a>
			</div>
		</div>
	</div>
</jsp:root>