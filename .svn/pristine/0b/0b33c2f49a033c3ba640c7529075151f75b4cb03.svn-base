<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<jsp:text>
	<![CDATA[
		<script	src="${pageContext.request.contextPath}/pages/admision/pagar-admision/js/index.js" type="text/javascript"></script>
		<script type="text/javascript" src="${pageContext.request.contextPath}/pages/admision/gestionar-pasos-proceso/js/index-pasos-proceso.js"></script>
		]]>
</jsp:text>
</head>
<body>
	<div class="row">
		<div class="col-md-12">
			<h1>
				<s:text name="IU1.5.1-1_TITLE" />
			</h1>
		</div>
	</div>
	<!-- ############################ BARRA DE PASOS DEL PROCESO #################################### -->
	<s:set var="varPasoProceso" value="1" />
	<s:hidden id="idPasoProceso" value="%{#varPasoProceso}" />
	<s:set var="varEtapaProceso" value="1" />
	<s:hidden id="idEtapaProceso" value="%{#varEtapaProceso}" />
	<div class="col-md-8 col-md-offset-2" >
		<s:include value="../gestionar-pasos-proceso/index-pasos-proceso.jsp" />
	</div>
	<div class="row col-md-7">
		<s:text name="IU1.4-2_LBL1" />
	</div>
	<!-- <div id="frmPagoTarjeta" class="form form-small">-->
	<div class="row">
		<s:form id="frmPagoTarjeta"
			action="%{#pagecontext.request.contextPath}/admision/pagar-admision-tarjeta"
			theme="simple" method="post">

			<!-- Pago con Tarjeta -->
			<div class="col-md-8 col-md-offset-2" >
				<fieldset class="form-section form-horizontal">
					<legend class="form-section">
						<s:text name="IU1.5-1_LBL1" />
					</legend>

					<!-- <form action="" method="POST" id="card-form"> -->
					<span class="card-errors"></span>
					<!-- First Name -->
					<div class="form-group">
						<label class="col-md-4 control-label label-obligatorio" for=""><s:text
								name="IU1.5.1-1_LBL2" /></label>
						<div class="col-md-8">
							<s:textfield id="txNombre" name="model.nombre" type="text"
								cssClass="form-control" data-conekta="card[name]"
								placeholder="  " maxlength="20" cssErrorClass="field-error" />
							<s:fielderror fieldName="model.nombre" cssClass="error"
								theme="%{getText('mx.edu.eld.defaulTheme')}" />
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-4 control-label label-obligatorio" for=""><s:text
								name="IU1.5.1-1_LBL3" /></label>
						<div class="col-md-8">
							<s:set var="lp" value="{'Prueba1', 'Prueba2'}" />
							<s:select class="form-control" list="lp">
							</s:select>
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-4 control-label label-obligatorio" for=""><s:text
								name="IU1.5.1-1_LBL4" /></label>
						<div class="col-md-8">
							<s:textfield id="txTarjeta" name="model.numTarjeta" type="text"
								cssClass="form-control" data-conekta="card[number]"
								placeholder="  " maxlength="20" cssErrorClass="field-error" />
							<s:fielderror fieldName="model.numTarjeta" cssClass="error"
								theme="%{getText('mx.edu.eld.defaulTheme')}" />
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-4 control-label label-obligatorio" for=""><s:text
								name="IU1.5.1-1_LBL5" /></label>
						<div class="col-md-8">
							<s:textfield id="txCvc" name="model.cvc" type="text"
								cssClass="form-control" data-conekta="card[cvc]"
								placeholder="  " maxlength="4" cssErrorClass="field-error" />
							<s:fielderror fieldName="model.cvc" cssClass="error"
								theme="%{getText('mx.edu.eld.defaulTheme')}" />
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-4 control-label label-obligatorio" for=""><s:text
								name="IU1.5.1-1_LBL6" /></label>
						<div class="col-md-8">
							<input size="2" data-conekta="card[exp_month]" type="text">
							</input> <span>/</span> <input size="4" data-conekta="card[exp_year]"
								type="text"> </input>
						</div>
					</div>
					<!-- </form>  -->
				</fieldset>
			</div>
			<div class="col-md-8 col-md-offset-2" >
				<div class="text-right">
					<s:submit id="btnAceptar"
						cssClass="btn btn-default btn-default-eld"
						value="%{getText('btnAceptar')}" />
					<a class="btn btn-default btn-default-eld"
						href="${pageContext.request.contextPath}/admision/pagar-admision">
						<s:text name="btnCancelar" />
					</a>
				</div>
			</div>
		</s:form>
	</div>
</body>
	</html>
</jsp:root>