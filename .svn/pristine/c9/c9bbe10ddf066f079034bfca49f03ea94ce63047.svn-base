<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<html xmlns="http://www.w3.org/1999/xhtml">
<!-- Head -->
<head>
<jsp:text>
	<![CDATA[
	<script
		src="${pageContext.request.contextPath}/pages/convocatoria/gestionar-convocatoria/js/index-edit.js"
		type="text/javascript"></script>
	]]>
</jsp:text>
</head>
<!-- Body -->
<body>
	<!-- TITULO -->
	<div class="row title">
		<div class="col-md-12">
			<h1 class="title">
				<s:text name="IU1.2-2_TLT"></s:text>
			</h1>
		</div>
	</div>

	<!-- Action messages -->
	<div class="row">
		<div class="outter-section form-medium">
			<div class="col-md-12">
				<s:actionmessage theme="%{getText('mx.edu.eld.defaulTheme')}" />
				<s:actionerror theme="%{getText('mx.edu.eld.defaulTheme')}" />
			</div>
		</div>
	</div>

	<!-- nota: las tablas que se agregan dentro de un tab, para que estas sean responsivas no deben tener fieldset -->

	<!-- TAB CON TABLAS REMOTAS -->
	<s:url var="urlCriterio"
		action="gestionar-criterio!mostrarCriterios?idConvocatoriaSel=%{idSel}" />
	<s:url var="urlRequisto"
		action="gestionar-requisito!mostrarRequisitos?idConvocatoriaSel=%{idSel}" />

	<div class="form-group">
		<div class="row">
			<div class="col-md-12">
				<sj:tabbedpanel id="remotetabs" onCompleteTopics="tabcomplete"
					onChangeTopics="tabchange">
					<center>
						<sj:tab id="tab1" href="%{urlCriterio}" label="Criterios" />
						<sj:tab id="tab2" href="%{urlRequisto}" label="Requisitos" />
					</center>
				</sj:tabbedpanel>
			</div>
		</div>
	</div>

	<!-- Botones de aceptar y cancelar -->
	<div class="row">
		<div class="outter-section">
			<div class="text-right col-md-12">
				<s:form id="frmRegistrarCriterio"
					action="%{#pageContext.request.contextPath}/convocatoria/gestionar-convocatoria/%{idSel}"
					method="post" theme="simple" cssClass="form-horizontal">
					<s:hidden name="_method" value="put" />
					<s:submit cssClass="btn btn-default btn-default-eld"
						value="%{getText('mx.com.eld.boton.aceptar')}" />
					<a class="btn btn-default btn-default-eld"
						href="${pageContext.request.contextPath}/convocatoria/gestionar-convocatoria">
						<s:text name="mx.com.eld.boton.cancelar" />
					</a>
				</s:form>

			</div>
		</div>
	</div>
</body>
	</html>
</jsp:root>