<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<html xmlns="http://www.w3.org/1999/xhtml">
<!-- Head -->
<head>
<jsp:text>
	<![CDATA[
	<script
		src="${pageContext.request.contextPath}/pages/convocatoria/asociar-criterios/js/index-editNew.js"
		type="text/javascript"></script>
	]]>
</jsp:text>
</head>
<!-- Body -->
<body>
	<!-- Titulo -->
	<div class="row title">
		<div class="col-md-12">
			<h1 class="title">
				<s:text name="IU_TLT1"></s:text>
			</h1>
		</div>
	</div>

	<!-- Action messages -->
	<div class="row">
		<div class="outter-section form-medium">
			<div class="col-md-12">
				<s:actionmessage theme="%{getText('mx.edu.eld.defaulTheme')}" />
			</div>
			<div class="col-md-12">
				<s:actionerror theme="%{getText('mx.edu.eld.defaulTheme')}" />
			</div>
		</div>
	</div>

	<!-- Tabla -->
	<s:form id="frmAsociarCriterio"
		action="%{#pageContext.request.contextPath}/convocatoria/asociar-criterios"
		method="POST">
		<s:hidden id="idConvocatoriaSel" name="idConvocatoriaSel" />
		<div class="form form-horizontal form-large text-justify">
			<table id="tblCriterios" class="table table-striped">
				<thead>
					<tr>
						<th data-priority="1"><s:text name="IU_LBL1" /></th>
						<th data-priority="2"><s:text name="IU_LBL2" /></th>
					</tr>
				</thead>
				<tbody>
					<s:iterator value="listCriterio" var="criterio">
						<tr>
							<td>${criterio.nombre}</td>
							<s:if test="%{#criterio.asociar eq true}">
								<td><input type="checkbox" id="chk_${criterio.id}"
									value="${criterio.id}" name="listAsociar" checked="checked" /></td>

							</s:if>
							<s:else>
								<td><input type="checkbox" id="chk_${criterio.id}"
									value="${criterio.id}" name="listAsociar" /></td>
							</s:else>
						</tr>
					</s:iterator>
				</tbody>
			</table>
		</div>

		<!-- Boton Agregar -->
		<div class="row">
			<div class="outter-section form-medium">
				<div class="col-md-12">
					<a class="btn btn-default btn-default-eld" id="btnAgregar"
						href="${pageContext.request.contextPath}/convocatoria/gestionar-criterio/new?idConvocatoriaSel=${idConvocatoriaSel}">
						<s:text name="IU_BTN1" />
					</a>
				</div>
			</div>
		</div>

		<!-- Botones de Aceptar y Cancelar -->
		<div class="row">
			<div class="outter-section form-large">
				<div class="text-right col-md-12">
					<s:submit id="btnAceptar"
						cssClass="btn btn-default btn-default-eld"
						value="%{getText('mx.com.eld.boton.aceptar')}" />
					<a class="btn btn-default btn-default-eld"
						href="${pageContext.request.contextPath}/convocatoria/gestionar-convocatoria/${idConvocatoriaSel}/edit">
						<s:text name="mx.com.eld.boton.cancelar" />
					</a>
				</div>
			</div>
		</div>
	</s:form>

</body>
	</html>
</jsp:root>