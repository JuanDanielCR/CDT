<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<html xmlns="http://www.w3.org/1999/xhtml">
<!-- Head -->
<head>
<jsp:text>
	<![CDATA[
	<script
		src="${pageContext.request.contextPath}/pages/convocatoria/gestionar-requisito/js/index.js"
		type="text/javascript"></script>
	]]>
</jsp:text>
</head>
<!-- Body -->
<body>
	<!-- Titulo -->
	<div class="row title">
		<div class="col-md-12">
			<h1 class="title">
				<s:text name="IUI1.2-12_TITLE" />
			</h1>
		</div>
	</div>

	<!-- Action errors -->
	<div class="row">
		<div class="outter-section form-medium">
			<div class="col-md-12">
				<s:actionerror theme="%{getText('mx.edu.eld.defaulTheme')}" />
			</div>
		</div>
	</div>

	<!-- label mensajes obligatorios -->
	<div class="row">
		<div class="outter-section form-medium text-left">
			<div class="col-md-12 text-left">
				<s:text name="IU1.2-3_LBL1" />
			</div>
		</div>
	</div>
	<s:form id="frmRegistrarCriterio"
		action="%{#pageContext.request.contextPath}/convocatoria/configurar-convocatoria/1"
		method="post" theme="simple" cssClass="form-horizontal">
		<s:hidden name="_method" value="put" />
		<!-- Formulario de registro -->
		<fieldset
			class="form-section form-horizontal form-medium text-justify">
			<legend class="form-section">
				<s:text name="IUI1.2-12_LBL1"></s:text>
			</legend>



			<!-- Campo Alumnos aceptados -->
			<div class="form-group">
				<label class="col-md-4 control-label label-obligatorio" for="">
					<s:text name="IUI1.2-12_LBL2" />
				</label>
				<div class="col-md-8 ">
					<s:textfield id="nu_aceptados" name="model.numeroAceptar"
						cssClass="form-control" maxlenght="4" cssErrorClass="field-error" />
					<s:fielderror fieldName="model.numeroAceptar" cssClass="error"
						theme="%{getText('mx.edu.eld.defaulTheme')}" />
				</div>
			</div>

			<!-- Campo Alumnos a entrevistar -->
			<div class="form-group">
				<label class="col-md-4 control-label label-obligatorio" for="">
					<s:text name="IUI1.2-12_LBL3" />
				</label>
				<div class="col-md-8 ">
					<s:textfield id="nu_entrevistar" name="model.numeroEntrevistar"
						cssClass="form-control" maxlenght="4" cssErrorClass="field-error" />
					<s:fielderror fieldName="model.numeroEntrevistar" cssClass="error"
						theme="%{getText('mx.edu.eld.defaulTheme')}" />
				</div>
			</div>

			<!-- Campo Calificación mínima aprobatoria. -->
			<div class="form-group">
				<label class="col-md-4 control-label label-obligatorio" for="">
					<s:text name="IUI1.2-12_LBL4" />
				</label>
				<div class="col-md-8 ">
					<s:textfield id="nu_calificacion" name="model.calificacion"
						cssClass="form-control" maxlenght="60" cssErrorClass="field-error" />
					<s:fielderror fieldName="model.calificacion" cssClass="error"
						theme="%{getText('mx.edu.eld.defaulTheme')}" />
				</div>
			</div>



		</fieldset>

		<!-- Botones de aceptar y cancelar -->
		<div class="row">
			<div class="outter-section form-medium">
				<div class="text-right col-md-12">
					<s:submit cssClass="btn btn-default btn-default-eld"
						value="%{getText('mx.com.eld.boton.aceptar')}" />
					<a class="btn btn-default btn-default-eld"
						href="${pageContext.request.contextPath}/convocatoria/gestionar-convocatoria">
						<s:text name="mx.com.eld.boton.cancelar" />
					</a>
				</div>
			</div>
		</div>

	</s:form>

</body>
	</html>
</jsp:root>