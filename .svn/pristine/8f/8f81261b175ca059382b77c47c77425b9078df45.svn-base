<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<jsp:text>
	<![CDATA[
	<script
		src="${pageContext.request.contextPath}/pages/ceneval/planificar-salones/js/index.js"
		type="text/javascript"></script>
	]]>
</jsp:text>
</head>
<body>
	<!-- VARIABLES -->
	<s:set var="numSalones" value="4" />
	<div class="row title">
		<div class="col-md-12">
			<h1 class="title">
				<s:text name="IU1.6-2_TITLE" />
			</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12 hidden">
			<div class="alert alert-danger">
				<s:text name="MSG19" />
			</div>
		</div>
	</div>

	<div class="row form">
		<div class="col-md-12">
			<s:set var="listSalones"
				value="{{'Salón 1','Planta Baja','40','25'},{'Salón 2','Planta Baja','40','25'},{'Salón 3','Planta Baja','40','25'},{'Salón 4','Planta Baja','40','25'},{'Salón 5','Planta Baja','40','25'},{'Salón 6','Planta Baja','40','25'},{'Salón 7','Planta Baja','40','25'},{'Salón 8','Planta Baja','40','25'}}" />
			<table id="tblSalonesSeleccionados" class="table table-striped">
				<thead>
					<tr>
						<th data-priority="1"><s:text name="IU1.6-2_LBL2" /></th>
						<th data-priority="2"><s:text name="IU1.6-2_LBL3" /></th>
						<th data-priority="2"><s:text name="IU1.6-2_LBL4" /></th>
						<th data-priority="2"><s:text name="IU1.6-2_LBL5" /></th>
						<th data-priority="1"><s:text name="IU1.6-2_LBL6" /></th>
					</tr>
				</thead>
				<tbody>
					<s:iterator value="listSalones" var="s" status="count">
						<tr>
							<td>${s[0]}</td>
							<td>${s[1]}</td>
							<td>${s[2]}</td>
							<td>${s[3]}</td>
							<s:if test="%{#count.index lte 5}">
								<td><input type="checkbox" checked="checked" /></td>
							</s:if>
							<s:else>
								<td><input type="checkbox" /></td>
							</s:else>
						</tr>
					</s:iterator>
				</tbody>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<label class="control-label"><s:text name="IU1.6-2_LBL1" /></label>
			<span><s:property value="#numSalones" /></span>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-right">
			<a
				href="${pageContext.request.contextPath}/ceneval/planificar-salones/1"
				class="btn btn-default btn-default-eld"><s:text
					name="btnAceptar" /></a> <a class="btn btn-default btn-default-eld"><s:text
					name="btnCancelar" /></a>
		</div>
	</div>
</body>
	</html>
</jsp:root>