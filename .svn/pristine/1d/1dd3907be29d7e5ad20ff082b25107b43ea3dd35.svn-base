function agregar() {
	var telefono;
	var lada;
	var correo;
	var nombre;
	var extension;
	var relacion;
	var Contacto;
	var cadenaHTML;
	var tipoContacto_;
	var categoriaContacto = $("input[name='model.idCategoria']:checked").val();
	$("#hdnIdCategoria" + _contacto).val(categoriaContacto);
	if (_contacto == "Telefono") {
		if (categoriaContacto == 2 || categoriaContacto == 1) {
			tipoContacto_ = $("#slcListTipoContactos option:selected").val();
			$("#hdnIdTipoContacto" + _contacto).val(tipoContacto_);
			lada = $("#txTelephoneCodeArea").val();
			telefono = $("#txTelephone").val();
			extension = $("#txTelephoneExtension").val();
			Contacto = [ tipoContacto_, lada, telefono, extension ];
			
		} else {
			tipoContacto_ = "Contacto de emergencia"
			tipoContacto_ = $("#slcListTipoContactos option:selected").val();
			$("#hdnIdTipoContacto" + _contacto).val(tipoContacto_);
			
			lada = $("#txTelephoneCodeArea").val();
			telefono = $("#txTelephone").val();
			extension = $("#txTelephoneExtension").val();
			nombre = $("#txEmergenciaTelefono").val();
			relacion = $("#txRelationTelefono").val();
			Contacto = [ tipoContacto_, lada, telefono, extension, nombre,
					relacion ];
		}
	} else if (_contacto == "Movil") {
		if (categoriaContacto == 2 || categoriaContacto == 1) {
			tipoContacto_ = "Teléfono celular"
			tipoContacto_ = $("#slcListTipoContactos option:selected").val();
			$("#hdnIdTipoContacto" + _contacto).val(tipoContacto_);
			lada = $("#txMobileCodeArea").val();
			telefono = $("#txMobileTelephone").val();
			Contacto = [ tipoContacto_, lada, telefono ];
		} else {
			tipoContacto_ = "Contacto de emergencia"
			tipoContacto_ = $("#slcListTipoContactos option:selected").val();
			$("#hdnIdTipoContacto" + _contacto).val(tipoContacto_);
			lada = $("#txMobileCodeArea").val();
			telefono = $("#txMobileTelephone").val();
			nombre = $("#txEmergenciaMovil").val();
			relacion = $("#txRelationMovil").val();
			Contacto = [ tipoContacto_, lada, telefono, nombre, relacion ];
		}
	} else if (_contacto == "Email") {
		if (categoriaContacto == 2 || categoriaContacto == 1) {
			tipoContacto_ = "Correo electrónico"
			tipoContacto_ = $("#slcListTipoContactos option:selected").val();
			$("#hdnIdTipoContacto" + _contacto).val(tipoContacto_);
			email = $("#txEmail").val();
			Contacto = [ tipoContacto_, email ];
		} else {
			tipoContacto_ = "Contacto de emergencia"
			tipoContacto_ = $("#slcListTipoContactos option:selected").val();
			$("#hdnIdTipoContacto" + _contacto).val(tipoContacto_);
			email = $("#txEmail").val();
			nombre = $("#txEmergenciaEmail").val();
			relacion = $("#txRelationEmail").val();
			Contacto = [ tipoContacto_, email, nombre, relacion ];
		}
	}

	$("#frmContacto"+_contacto).submit();
	idContacto++;
	$("#tblContactos").append(cadenaHTML);
	//limpiarFormulario();
}

