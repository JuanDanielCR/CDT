public class ReglaNegocioS10 implements ReglaNegocio{
	
	/**
	 * Valida que el formato del correo electr√≥nico sea el correcto.
	 * @param email	{String} Objeto String con el correo.
	 * @return {Boolean} true si el correo cumple con el formato,
	 * 					 falso en caso contrario.
	 */
	
	public static Boolean validate(String correo){
			if (!correo.matches("^[_A-Za-z0-9-\\+]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9-]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$")) {
				return false;
			}
			return true;

		}

}
