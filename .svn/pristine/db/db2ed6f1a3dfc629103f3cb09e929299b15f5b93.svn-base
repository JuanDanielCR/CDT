<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<![CDATA[
		<script type="text/javascript" src="${pageContext.request.contextPath}/pages/admision/gestionar-direccion/js/index-editNew.js"></script>
	]]>

	<div id="divDireccionCp">
	
		<!-- Entidad federativa -->
		<div class="form-group">
			<label class="col-md-4 control-label label-obligatorio" for=""><s:text
					name="IU1.4-4_LBL14" /> </label>
			<div class="col-md-8">
				<s:property value="%{entidad.nombre}" />
				<s:hidden name="model.idEntidad" value="%{entidad.id}" />
			</div>
		</div>

		<!-- DelegaciÃ³n/municipio -->
		<div class="form-group">
			<label class="col-md-4 control-label label-obligatorio" for="">
				<s:text name="IU1.4-4_LBL15" />
			</label>
			<div class="col-md-8">
				<s:property value="%{municipio.nombre}" />
				<s:hidden name="model.idMunicipio" value="%{municipio.idMunicipio}" />
			</div>
		</div>

		<!--Colonia -->
		<div class="form-group">
			<label class="col-md-4 control-label label-obligatorio" for=""><s:text
					name="IU1.4-4_LBL16" /></label>
			<div class="col-md-8">
				<s:select id="slcColonia" list="colonias" name=""
					listValue="asentamiento" listKey="id" headerKey="-1"
					headerValue="--Seleccione una Colonia--" cssClass="form-control"
					cssErrorClass="error" />
				<s:fielderror id="feSlcColonia" fieldName="" cssClass="error"
					theme="%{getText('mx.edu.eld.defaulTheme')}" />
			</div>
		</div>

		<!-- contiene el campo de otra colonia (de requerirse) -->
		<div id="divOtraColonia" class="hidden">
			<!-- Otra Colonia -->
			<div class="form-group">
				<label class="col-md-4 control-label label-obligatorio" for=""><s:text
						name="IU1.4-4_LBL21" /></label>
				<div class="col-md-8">
					<s:textfield id="txOtraColonia" name="" type="text"
						cssClass="form-control" placeholder="%{getText('IU1.4-4_LBL16')}"
						maxlength="40" cssErrorClass="field-error" />
					<s:fielderror id="feTxOtraColonia" fieldName="" cssClass="error"
						theme="%{getText('mx.edu.eld.defaulTheme')}" />
				</div>
			</div>
			<br />
		</div>

		<s:hidden id="hdnColonia" name="model.colonia" />

	</div>

</jsp:root>