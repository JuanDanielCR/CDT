<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<jsp:text>
	<![CDATA[
	<script
		src="${pageContext.request.contextPath}/pages/convocatoria/gestionar-criterio/js/index.js"
		type="text/javascript"></script>
	]]>
</jsp:text>
</head>
<!-- Body -->
<body>

	<!-- Titulo -->
	<div class="row title">
		<div class="col-md-12">
			<h1 class="title">
				<s:text name="IU1.2-3_TLT2" />
			</h1>
		</div>
	</div>
	<!-- label mensajes obligatorios -->
	<div class="row">
		<div class="outter-section form-medium text-left">
			<s:text name="IU1.2-3_LBL1" />
		</div>
	</div>

	<!-- Formulario de registro -->
	<s:form id="frmEditarCriterio"
		action="%{#pageContext.request.contextPath}/convocatoria/configurar-criterio/%{model.id}"
		method="post" theme="simple">
		<s:hidden name="_method" value="PUT"></s:hidden>
		<fieldset
			class="form-section form-horizontal form-medium text-justify">
			<legend class="form-section">
				<s:text name="IU1.2-3_LBL2"></s:text>
			</legend>



			<!-- Nombre Costo -->
			<div class="form-group">
				<label class="col-md-4 control-label label-obligatorio" for="">
					<s:text name="IU1.2-3_LBL6" />
				</label>
				<div class="col-md-8 input-min">
					<div class="input-group col-md-8 input-min ">
						<div class="input-group-addon">
							<span class="glyphicon glyphicon-usd"></span>
						</div>
						<s:textfield id="costo" name="model.costo" cssClass="form-control"
							maxlenght="20" cssErrorClass="field-error" value="%{model.costo}" />
					</div>
					<s:fielderror fieldName="model.costo" cssClass="col-md-8 error"
						theme="%{getText('mx.edu.eld.defaulTheme')}" />
				</div>
			</div>

			<!-- ponderacion -->
			<div class="form-group">
				<label class="col-md-4 control-label label-obligatorio" for="">
					<s:text name="IU_LBL5" />
				</label>
				<div class="col-md-8 input-min">
					<div class="input-group col-md-8 input-min ">
						<div class="input-group-addon">
							<span>%</span>
						</div>
						<s:textfield id="ponderacion" name="model.ponderacion"
							cssClass="form-control" maxlenght="20"
							cssErrorClass="field-error" value="%{model.ponderacion}" />
					</div>
					<s:fielderror fieldName="model.ponderacion"
						cssClass="col-md-8 error"
						theme="%{getText('mx.edu.eld.defaulTheme')}" />
				</div>
			</div>

			<!-- Select Valor Minimo -->
			<div class="form-group text-left">
				<label class="col-md-4 control-label label-obligatorio" for="">
					<s:text name="IU1.2-3_LBL4" />
				</label>
				<div class="col-md-6">
					<sj:spinner name="model.minimo" id="spValMin" min="0" max="10"
						step="1" value="%{model.minimo}" mouseWheel="true"
						cssClass="form-control input-min" />
					<s:fielderror fieldName="model.minimo" cssClass="col-md-8 error"
						theme="%{getText('mx.edu.eld.defaulTheme')}" />
				</div>
			</div>

			<!-- Select Valor Maximo -->
			<div class="form-group text-left">
				<label class="col-md-4 control-label label-obligatorio" for="">
					<s:text name="IU1.2-3_LBL5" />
				</label>
				<div class="col-md-8">
					<sj:spinner name="model.maximo" id="spValMax" min="0" max="10"
						step="1" value="%{model.maximo}" mouseWheel="true"
						cssClass="form-control input-min" />
					<s:fielderror fieldName="model.maximo" cssClass=" col-md-8 error"
						theme="%{getText('mx.edu.eld.defaulTheme')}" />
				</div>
				
			</div>

			<s:set var="listOpciones" value="{{'Si',true},{'No',false}}" />

			<!-- Control radio documento adjunto -->
			<div class="form-group">
				<label class="col-md-4 control-label label-obligatorio" for=""><s:text
						name="IU_LBL6" /></label>
				<div class="col-md-8">
					<div class="col-md-8 col-xs-12 pull-left">
						<s:set var="varChecked" value="" />
						<s:iterator value="listOpciones" var="g" status="stat">
							<s:set var="valor" value="#g[0]" />
							<s:if test="model.adjunto eq true">
								<div class="col-md-4 col-xs-6 radio-container">
									<s:if test="#g[1] eq true">
									<input id="mexicoSecundaria_${g[1]}" name="model.adjunto"
										type="radio" value="${g[1]}" checked="checked" /> ${g[0]}
									</s:if>
									<s:else>
									<input id="mexicoSecundaria_${g[1]}" name="model.adjunto"
										type="radio" value="${g[1]}"/> ${g[0]}
									</s:else>
								</div>
							</s:if>
							<s:elseif test="model.adjunto eq false || model.adjunto eq null">
								<div class="col-md-4 col-xs-6 radio-container">
									<input id="mexicoSecundaria_${g[1]}" name="model.adjunto"
										type="radio" value="${g[1]}" checked="checked" /> ${g[0]}
								</div>
							</s:elseif>
							<s:fielderror fieldName="model.adjunto" cssClass="col-md-8 error"
								theme="%{getText('mx.edu.eld.defaulTheme')}" />
						</s:iterator>
					</div>
				</div>
			</div>


		</fieldset>


		<!-- Botones de aceptar y cancelar -->
		<div class="row">
			<div class="outter-section form-medium">
				<div class="text-right col-md-12">
					<s:submit id="btnAceptar"
						cssClass="btn btn-default btn-default-eld"
						value="%{getText('mx.com.eld.boton.aceptar')}" />
					<a class="btn btn-default btn-default-eld"
						href="${pageContext.request.contextPath}/convocatoria/gestionar-convocatoria/1488/edit">
						<s:text name="mx.com.eld.boton.cancelar" />
					</a>
				</div>
			</div>
		</div>
	</s:form>
</body>
	</html>
</jsp:root>