<?xml version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0"
	xmlns:s="/struts-tags" xmlns:sj="/struts-jquery-tags">
	<jsp:directive.page language="java"
		contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" />
	<html xmlns="http://www.w3.org/1999/xhtml">
<!-- Head -->
<head>
<jsp:text>
	<![CDATA[
	<script
		src="${pageContext.request.contextPath}/pages/convocatoria/gestionar-periodo-criterio/js/index.js"
		type="text/javascript"></script>
	]]>
</jsp:text>
</head>
<!-- Body -->
<body>

	<!-- Variables -->
	<s:set var="formatDate" value="%{getText('mx.edu.eld.formatDate')}" />

	<!-- titulo -->
	<div class="row title">
		<div class="col-md-12">
			<h1 class="title">
				<s:text name="IU_TLT2"></s:text>
			</h1>
		</div>
	</div>

	<!-- label mensajes obligatorios -->
	<div class="row">
		<div class="col-md-12">
			<s:actionerror theme="%{getText('mx.edu.eld.defaulTheme')}" />
			<s:actionmessage theme="%{getText('mx.edu.eld.defaulTheme')}" />
		</div>
	</div>
	<!-- Tabla -->
	<div class="form form-horizontal form-max text-justify">
		<table id="tblPeriodos" class="table table-striped">
			<thead>
				<tr>
					<s:date name="" format="" />
					<th data-priority="1"><s:text name="IU_LBL15" /></th>
					<th data-priority="2"><s:text name="IU_LBL8" /></th>
					<th data-priority="3"><s:text name="IU_LBL9" /></th>
					<th data-priority="5"><s:text name="IU_LBL10" /></th>
					<th data-priority="6"><s:text name="IU_LBL11" /></th>
					<th data-priority="4"><s:text name="IU_LBL12" /></th>
				</tr>
			</thead>
			<tbody>
				<s:iterator value="listPeriodos" var="periodo">
					<tr>
						<s:date var="fechaInicio" name="%{#periodo.inicio}"
							format="%{#formatDate}" />
						<s:date var="fechaFinal" name="%{#periodo.fin}"
							format="%{#formatDate}" />
						<s:date var="horaInicio" name="%{#periodo.inicio}"
							format="HH:mm a" />
						<s:date var="horaFinal" name="%{#periodo.fin}" format="HH:mm a" />
						<td>${periodo.nombrePeriodo}</td>
						<td>${fechaInicio}</td>
						<td>${fechaFinal}</td>
						<td>${horaInicio}</td>
						<td>${horaFinal}</td>
						<td><s:set var="idSel"
								value="%{#periodo.id.idConvocatoria+'_'+#periodo.id.idCriterio}" />
							<s:hidden name="idSel" value="%{idSel}"></s:hidden> <a
							href="${pageContext.request.contextPath}/convocatoria/configurar-criterio/${idSel}/edit"><i
								class="material-icons md-24 md-eld">mode_edit</i></a> <s:if
								test="%{@mx.edu.eld.bs.rules.ReglaNegocioN6@validate(#periodo.inicio)}">
								<a
									onclick="openDlgDelete('${periodo.idPeriodo}_${periodo.idConvocatoria}_${periodo.idCriterio}')">
									<i class="material-icons md-24 md-eld">delete</i>
								</a>
							</s:if></td>
					</tr>
				</s:iterator>
			</tbody>
		</table>
	</div>

	<!-- boton agregar -->
	<div class="row">
		<div class="outter-section">
			<div class="col-md-12">
				<a class="btn btn-default btn-default-eld" id="btnAgregar"
					href="${pageContext.request.contextPath}/convocatoria/gestionar-periodo-criterio/new?idConvocatoriaCriterioSel=${idConvocatoriaCriterioSel}">
					<s:text name="IU_BTN1" />
				</a>
			</div>
		</div>
	</div>

	<!-- Botones de aceptar y cancelar -->
	<div class="row">
		<div class="outter-section">
			<div class="text-right col-md-12">
				<a class="btn btn-default btn-default-eld"
					href="${pageContext.request.contextPath}/convocatoria/gestionar-convocatoria/1488/edit">
					<s:text name="mx.com.eld.boton.aceptar" />
				</a> <a class="btn btn-default btn-default-eld"
					href="${pageContext.request.contextPath}/convocatoria/gestionar-convocatoria/1488/edit">
					<s:text name="mx.com.eld.boton.cancelar" />
				</a>
			</div>
		</div>
	</div>

	<!-- Dialogo -->
	<sj:dialog id="dlgDelete" modal="true" title="Eliminar Periodo"
		autoOpen="false" openTopics="showDlgDelete"
		closeTopics="closeDlgDelete" resizable="false" draggable="false">
		<div class="row">
			<div class="col-md-12">
				<s:text name="IU1.2-2C_LBL8" />
			</div>
		</div>
		<!-- Botones -->
		<div class="row">
			<s:form id="frmEliminarPeriodo">
				<s:hidden id="_method" name="_method" value="DELETE" />
			</s:form>
			<div class="text-right col-md-12">
				<a id="submitForm" class="btn btn-default btn-default-eld"><s:text
						name="IU1.2-2C_LBL9" /></a> <a onclick="closeDeleteDlg()"
					class="btn btn-default btn-default-eld"><s:text
						name="IU1.2-2C_LBL10" /></a>
			</div>
		</div>
	</sj:dialog>
</body>
	</html>
</jsp:root>